<?xml version="1.0" encoding="utf-8" ?>
<rf:ContentView2
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rf="clr-namespace:RedCorners.Forms"
    mc:Ignorable="d"
    x:Class="RedCorners.Forms.HiddenEntry">
    <Grid>
        <Label 
            x:Name="label" 
            HorizontalOptions="Fill" 
            VerticalOptions="Fill" 
            VerticalTextAlignment="Center" 
            Text="{Binding Label, Mode=OneWay}"
            TextColor="{Binding LabelTextColor, Mode=OneWay}"
            FontFamily="{Binding FontFamily, Mode=OneWay}"
            FontAttributes="{Binding FontAttributes, Mode=OneWay}"
            HorizontalTextAlignment="{Binding LabelTextAlignment, Mode=OneWay}"
            Margin="{Binding LabelMargin, Mode=OneWay}"
            FontSize="{Binding LabelFontSize, Mode=OneWay}"
            />
        <Entry 
            x:Name="entry" 
            HorizontalOptions="Fill" 
            VerticalOptions="Fill" 
            VerticalTextAlignment="Center" 
            Text="{Binding Text, Mode=TwoWay}"
            Placeholder="{Binding Placeholder, Mode=OneWay}"
            BackgroundColor="{Binding EntryBackgroundColor, Mode=OneWay}"
            TextColor="{Binding EntryTextColor, Mode=OneWay}"
            PlaceholderColor="{Binding EntryPlaceholderColor, Mode=OneWay}"
            FontFamily="{Binding FontFamily, Mode=OneWay}"
            FontAttributes="{Binding FontAttributes, Mode=OneWay}"
            HorizontalTextAlignment="{Binding EntryTextAlignment, Mode=OneWay}"
            FontSize="{Binding EntryFontSize, Mode=OneWay}"
            Keyboard="{Binding Keyboard, Mode=OneWay}"
            ReturnCommand="{Binding SubmitCommand, Mode=OneWay}"
            IsPassword="{Binding IsPassword, Mode=OneWay}"
            />
        <rf:DatePicker2
            x:Name="datePicker"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Date="{Binding Date, Mode=TwoWay}"
            BackgroundColor="{Binding EntryBackgroundColor, Mode=OneWay}"
            TextColor="{Binding EntryTextColor, Mode=OneWay}"
            FontFamily="{Binding FontFamily, Mode=OneWay}"
            FontAttributes="{Binding FontAttributes, Mode=OneWay}"
            FontSize="{Binding EntryFontSize, Mode=OneWay}"
            />
    </Grid>
</rf:ContentView2>